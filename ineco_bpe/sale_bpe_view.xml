		                                        		<field name="cost_rate" on_change="onchange_price(cost,cost_rate,quantity,mod_demod)"/>
                                        			</group>
                                        			<group string="Summary">
		                                        		<field name="mod_demod" on_change="onchange_price(cost,cost_rate,quantity,mod_demod)"/>
