                                        		<field name="total_cost" />
                                        	</tree>
                                        	<form string="Estimate">
                                        		<group>
                                        			<group string="Estimate">
		                                        		<field name="sequence" />
		                                        		<field name="product_id" on_change="onchange_product_id(product_id, name)" />
		                                        		<field name="name" />
