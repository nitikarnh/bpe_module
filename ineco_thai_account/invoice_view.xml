            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="number" position="after">
                    <field name="supplier_invoice_number"/>
                    <field name="customer_code" string="Partner Code" />
                    <field name="pid" string="Tax ID" />
                </field>
            </field>
        </record>

        <record id="view_ineco_account_invoice_filter" model="ir.ui.view">
            <field name="name">ineco.account.invoice.select</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <filter name="unpaid" position="after">
                    <filter name="nodue" icon="terp-gtk-media-pause" string="No Due Date"
                            domain="[('date_due','=',False),('state','=','draft')]" help="No due date."/>
                    <filter name="nobill" icon="terp-gtk-media-pause" string="No Billing Date"
                            domain="[('bill_due','=',False),('state','=','draft')]" help="No bill date."/>
                    <filter name="todaydue" icon="terp-go-today" string="Today Due"
                            domain="[('date_due','=',time.strftime('%%Y-%%m-%%d')),('state','=','draft')]"/>
                    <filter name="todaybill" icon="terp-go-today" string="Today Billing"
                            domain="[('bill_due','=',time.strftime('%%Y-%%m-%%d')),('state','=','draft')]"/>
                    <filter name="todo" icon="terp-go-today" string="To Do" domain="[('state','in',['draft','open'])]"/>
                    <filter name="nosupplierinvoice" icon="terp-go-today" string="No Supplier Invoice"
                            domain="[('supplier_invoice_number','=',False)]"/>
                </filter>
            </field>
        </record>

        <record id="view_ineco_invoice_tree" model="ir.ui.view">
            <field name="name">ineco.account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="date_due" position="after">
                    <field name="receipt_due"/>
                    <field name="bill_due"/>
                    <field name="receive_no" groups="ineco_thai_account.group_individual_taxinvoice"/>
                    <field name="receive_date" groups="ineco_thai_account.group_individual_taxinvoice"/>
                </field>
                <field name="amount_untaxed" position="replace">
                    <field name="amount_untaxed" invisible="1" sum="Untaxed Amount"/>
                </field>
                <field name="period_id" position="after">
                    <field name="period_tax_id" invisible="1"/>
                    <field name="internal_number" invisible="1"/>
                </field>
            </field>
        </record>

